    "version": "2.0.0",
    "tasks": [
        {
            "label": "Load main.py",
            "type": "shell",
            "command": "ampy",
            "args": [
                "--port",
                "/dev/ttyUSB0",
                "put",
                "main.py"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
